<UserControl x:Class="MTS.Admin.Controls.ModbusSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:MTS.Controls"
    xmlns:blend="clr-namespace:VIBlend.WPF.Controls;assembly=VIBlend.WPF.Editors">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition MinWidth="50"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0">IP Address:</Label>
        <blend:MaskEditor Grid.Row="0" Grid.Column="1" Mask="___.___.___.___" x:Name="ipAddress" />
        
        <Label Grid.Row="1" Grid.Column="0">Port:</Label>
        <blend:NumberEditor Grid.Row="1" Grid.Column="1" x:Name="port" DecimalPlaces="0"/>

        <Label Grid.Row="2" Grid.Column="0">Config file:</Label>
        <blend:PromptTextBox PromptText="Path to config file" Grid.Row="2" Grid.Column="1" x:Name="configFile"/>
        <Button Grid.Row="2" Grid.Column="2" Padding="3,0" x:Name="browseButton">Browse ...</Button>
    </Grid>
</UserControl>
