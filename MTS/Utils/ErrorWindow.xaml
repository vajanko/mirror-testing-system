<Window x:Class="MTS.Utils.ErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="{Binding ErrorTitle, RelativeSource={RelativeSource self}}" MinWidth="400" MinHeight="170"
        Width="400" Height="170" MaxHeight="400" MaxWidth="600"
    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
    ShowInTaskbar="False">
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="100" MaxHeight="150">
            <Image Margin="20" Stretch="None" x:Name="errorIcon"></Image>
            <Label>Message</Label>
        </StackPanel>
        
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <StackPanel Orientation="Horizontal">
                <Image Width="30" Height="30"/>
                <Image Width="30" Height="30"/>
                <Image Width="30" Height="30"/>
            </StackPanel>
            <Button DockPanel.Dock="Right" MinWidth="80" Margin="5" VerticalAlignment="Bottom" 
                    IsDefault="True" IsCancel="True">OK</Button>
        </DockPanel>
    </DockPanel>
</Window>
