<StackPanel x:Class="MTS.Controls.NumericButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Orientation="Horizontal">
    
    <TextBox x:Name="inputValue" VerticalAlignment="Center"/>
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="0"/>
            </Style>
            <Style TargetType="{x:Type Image}">
                <Setter Property="Height" Value="4"/>
            </Style>
        </StackPanel.Resources>
        <Button x:Name="upButton" Click="upButton_Click">
            <Image Source="../Resources/Images/up1.png"/>
        </Button>
        <Button x:Name="downButton" Click="downButton_Click">
            <Image Source="../Resources/Images/down.png"/>
        </Button>        
    </StackPanel>
    <TextBlock x:Name="unitBlock" VerticalAlignment="Center"/>
</StackPanel>
