<UserControl x:Class="MTS.Controls.Sensor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Border BorderBrush="Black">
        <StackPanel>
            <Label>Sensors</Label>
            <CheckBox x:Name="enabled" IsChecked="False">Enabled</CheckBox>
            <ListBox ItemsSource="{Binding Sensors, RelativeSource={RelativeSource self}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox>hello</CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel x:Name="sensors" IsEnabled="{Binding IsChecked, ElementName=enabled}">
                <CheckBox>Sensor 1</CheckBox>
                <CheckBox>Sensor 2</CheckBox>
                <CheckBox>Sensor 3</CheckBox>
                <CheckBox>Sensor 4</CheckBox>
            </StackPanel>                        
        </StackPanel>
    </Border>
</UserControl>
