<UserControl x:Class="MTS.Controls.UpDownButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:MTS.Controls" x:Name="root"
    VerticalContentAlignment="Top">
    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="{x:Type RepeatButton}">
                <Setter Property="Padding" Value="0"/>
            </Style>
        </DockPanel.Resources>
        <StackPanel DockPanel.Dock="Right">
            <RepeatButton x:Name="upButton" Click="upButton_Click">
                <Polygon Points="0,4 8,4 4,0" Fill="Black"/>
            </RepeatButton>
            <RepeatButton x:Name="downButton" Click="downButton_Click">
                <Polygon Points="0,0 8,0 4,4" Fill="Black"/>
            </RepeatButton>
        </StackPanel>
        <TextBox x:Name="inputValue"
                     Text="{Binding ElementName=root, Path=Value, ValidatesOnExceptions=True}"/>
    </DockPanel>
</UserControl>
