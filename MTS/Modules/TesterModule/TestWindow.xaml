<ad:DocumentContent x:Class="MTS.TesterModule.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:ctrl="clr-namespace:MTS.Controls"
    Title="Tester" x:Name="root" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Margin="3">
            <Grid.Resources>
                <ctrl:BoolNegationConverter x:Key="boolNegation"/>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MinWidth="80" MaxWidth="160"/>
                <ColumnDefinition Width="Auto" MaxWidth="160"/>
                <ColumnDefinition MinWidth="80" MaxWidth="160"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MaxWidth="160"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Parameters properties -->
            <Label Content="Parameters:" IsEnabled="True" Grid.Column="0"/>
            <Label Grid.Column="1" x:Name="parametersStatus" Content="{Binding ParamStatusMessage, ElementName=root}"/>

            <Label Content="Part number:" Grid.Row="1" Grid.Column="0" IsEnabled="{Binding IsParamLoaded, ElementName=root}"/>
            <Label Grid.Column="1" Grid.Row="1" x:Name="partNumber"/>

            <Label Content="Supplier name:" Grid.Row="2" Grid.Column="0" IsEnabled="{Binding IsParamLoaded, ElementName=root}"/>
            <Label Grid.Row="2" Grid.Column="1" x:Name="supplierName"/>

            <Label Content="Description:" Grid.Row="3" Grid.Column="0" IsEnabled="{Binding IsParamLoaded, ElementName=root}"/>
            <Label Grid.Row="3" Grid.Column="1" x:Name="description" Grid.RowSpan="2"/>
            
            <Button Content="Load Parameters ..." Grid.Column="0" Grid.Row="4" Click="loadParameters"
                    IsEnabled="{Binding IsRunning, ElementName=root, Converter={StaticResource boolNegation}}"/>
            <Label Grid.Column="1" Grid.Row="4" x:Name="paramFile"/>

            <!-- Shift properties -->
            <Label Content="Shift:" Grid.Column="2"/>
            <Label x:Name="shiftStatus" Grid.Column="3" Content="{Binding ShiftStatusMessage, ElementName=root}"/>
            
            <Label Content="Mirrors:" Grid.Row="1" Grid.Column="2" IsEnabled="{Binding IsNotRunning, ElementName=root}"/>
            <ctrl:UpDownButton Grid.Column="3" Grid.Row="1" Value="{Binding Mirrors, ElementName=root, Mode=TwoWay}"
                               IsEnabled="{Binding IsNotRunning, ElementName=root}"
                               Decimals="0" MinWidth="80" MaxWidth="80" MinValue="1" HorizontalAlignment="Left"/>
            <!-- These controls are enabled only if shift is running -->
            <Label Content="Finished:" Grid.Row="2" Grid.Column="2" IsEnabled="{Binding IsRunning, ElementName=root}"/>
            <Label Content="{Binding Finished, ElementName=root}" Grid.Row="2" Grid.Column="3"/>
            
            <Label Content="Correct:" Grid.Row="3" Grid.Column="2" IsEnabled="{Binding IsRunning, ElementName=root}"/>
            <Label Content="{Binding Correct, ElementName=root}" Grid.Row="3" Grid.Column="3"/>
            
            <Label Content="Defective:" Grid.Row="4" Grid.Column="2" IsEnabled="{Binding IsRunning, ElementName=root}"/>
            <Label Content="{Binding Defective, ElementName=root}" Grid.Row="4" Grid.Column="3"/>
            
            <!-- Buttons -->
            <Button Content="Connect" Grid.Column="4" Grid.Row="0" Click="connectClick" 
                    IsEnabled="{Binding IsDeviceConnected, ElementName=root, Converter={StaticResource boolNegation}}"/>
            <Button Content="Disconnect" Grid.Column="4" Grid.Row="1" Click="disconnectClick"
                    IsEnabled="{Binding IsDeviceConnected, ElementName=root}"/>
            <Button Content="Start Shift" Grid.Column="4" Grid.Row="3" Click="startClick"
                    IsEnabled="{Binding IsParamLoaded, ElementName=root}">
            </Button>
            <Button Content="Stop Shift" Grid.Column="4" Grid.Row="4" Click="stopClick"
                    IsEnabled="{Binding IsRunning, ElementName=root}"/>
            
            <!-- Device state -->
            <Label Content="Device:" Grid.Column="5"/>
            <Label Content="{Binding DeviceStatusMessage, ElementName=root}" Grid.Column="6"/>
            
            <Label Content="Power supply:" Grid.Column="5" Grid.Row="1"/>
            <Label Grid.Column="6" Grid.Row="1" x:Name="powerSupplyStatus"/>
        </Grid>        
        
        <ctrl:MirrorView DockPanel.Dock="Left" 
                         Width="350" Height="350" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left"
                         x:Name="mirrorView"/>
        <WrapPanel DockPanel.Dock="Right" Orientation="Horizontal">
            <WrapPanel.Resources>
                <Style TargetType="{x:Type ctrl:FlowControl}">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="MinWidth" Value="200"/>
                    <Setter Property="MinHeight" Value="120"/>
                    <Setter Property="TextBrush" Value="White"/>
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="BorderBrush" Value="Green"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </WrapPanel.Resources>
            <ctrl:FlowControl Title="Spiral current" x:Name="spiralCurrent" Unit="mA"/>
            <ctrl:FlowControl Title="Blinker current" x:Name="blinkerCurrent" Unit="mA"/>
            <ctrl:FlowControl Title="ActuatorA current" Unit="mA" x:Name="actuatorACurrent"/>
            <ctrl:FlowControl Title="ActuatorB current" Unit="mA" x:Name="actuatorBCurrent"/>
            <ctrl:FlowControl Title="Powerfold current" Unit="mA" x:Name="powerfoldCurrent"/>
            <ctrl:FlowControl Title="Power supply 1" Unit="V" x:Name="powerSupplyVoltage1"/>
            <ctrl:FlowControl Title="Power supply 1" Unit="V" x:Name="powerSupplyVoltage2"/>
        </WrapPanel>
    </DockPanel>
</ad:DocumentContent>
