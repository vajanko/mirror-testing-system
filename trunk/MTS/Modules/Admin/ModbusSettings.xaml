<UserControl x:Class="MTS.Admin.ModbusSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition MinWidth="100" MaxWidth="200"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0">IP Address:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="ipAddress" Width="100" HorizontalAlignment="Left"/>
        
        <Label Grid.Row="1" Grid.Column="0">Port:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="port" Width="40" HorizontalAlignment="Left"/>

        <Label Grid.Row="2" Grid.Column="0">Config file:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="configFile"/>
        <Button Grid.Row="2" Grid.Column="2" x:Name="browseButton">Browse ...</Button>
    </Grid>
</UserControl>
