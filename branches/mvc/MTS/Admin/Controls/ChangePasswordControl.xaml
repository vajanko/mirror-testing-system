<UserControl x:Class="MTS.Admin.Controls.ChangePasswordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="3"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Password:" Grid.Column="0" Grid.Row="0"/>
        <PasswordBox Grid.Column="1" Grid.Row="0" TabIndex="0" x:Name="passwordBox"/>

        <TextBlock Text="New password:" Grid.Column="0" Grid.Row="1"/>
        <PasswordBox Grid.Column="1" Grid.Row="1" TabIndex="1" x:Name="newPasswordBox"/>

        <TextBlock Text="Confirm password:" Grid.Column="0" Grid.Row="2"/>
        <PasswordBox Grid.Column="1" Grid.Row="2" TabIndex="2" x:Name="confirmPasswordBox"/>

        <Button Grid.Column="1" Grid.Row="3" Content="Change" Margin="5" HorizontalAlignment="Center" 
                                MinWidth="60" x:Name="changeButton" Click="changeButton_Click" IsDefault="True"/>
    </Grid>
</UserControl>
